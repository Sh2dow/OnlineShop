<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,  initial-scale=1.0">
    <title>@ViewBag.Title - ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <nav class="navbar navbar-inverse">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Products", "Index", "Products")</li>
                    <li>
                        <form class="form-inline my-2 my-lg-0" action="/Products" method="get">
                            <input name="param" class="form-control input-sm" type="text" placeholder="Search by name">
                            <button class="btn btn-outline-success btn-sm" type="submit">Search</button>
                        </form>
                    </li>
                </ul>
            </div>
    </nav>
    <div class="container">
        <div class="jumbotron">
            @RenderBody()
        </div>
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - ASP.NET Application &nbsp;&nbsp;&nbsp;&nbsp;</p>
    </footer>
    @*@Scripts.Render("~/bundles/app")*@
    @RenderSection("scripts", required: false)
</body>
</html>
